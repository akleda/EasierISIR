<VBox id="vb" prefHeight="500" prefWidth="250" style="-fx-padding: 10 50 5 5;" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ah.easierisir_1.pkg1fxml.FXMLDocumentController">
    <children>
        <HBox id="" spacing="3" style="-fx-padding: 10 50 5 5;">
            <Button fx:id="bLoadCSV" onAction="#handlebLoadCSVButton" text="Načti CSV" />
            <Button fx:id="bSaveCSV" onAction="#handleSaveCSVButton" text="Ulož CSV" />
            <Button fx:id="bRunRequests" onAction="#handleRunRequestsButton" text="Spusť" />
        </HBox>
        <Text fx:id="tLoadPath" text=" Vstupní CSV soubor: " />  
        <TextFlow fx:id="tfSavePath">
            <Text fx:id="tSavePath1" text=" Výstupní CSV soubor: " />
            <Text fx:id="tSavePath2" text="" /> 
        </TextFlow> 
        <ProgressBar fx:id="pbRequestsDone" minWidth="380" style="-fx-padding: 10 10 5 5" />
            <Label style="-fx-font: NORMAL 20 Tahoma;" text="Evidence dlužníků" />
            <TableView fx:id="tableView" prefHeight="300.0" prefWidth="380.0"  >
                <columns>
                    <TableColumn prefWidth="151.0" text="Jméno Příjmení/Název">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn minWidth="9.0" prefWidth="117.0" text="IČ/RČ">
                        <cellValueFactory>
                            <PropertyValueFactory property="icrc" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="90.0" text="Nalezen">
                        <cellValueFactory>
                            <PropertyValueFactory property="found" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>   
                <items>
                    <FXCollections fx:factory="observableArrayList">
                    </FXCollections>
                </items>
            </TableView>
    </children>
    
</VBox>
